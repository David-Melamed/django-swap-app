pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                echo 'Building..'
/*                sh "git clone -b "main" https://github.com/David-Melamed/SWAP-Web.git"
                  sh "mkdir -p ~/SWAP-APP && cp . ~/SWAP-APP/"*/
                script {
                    def buildNumber = env.BUILD_NUMBER
                    def workspace = env.WORKSPACE
                    def buildUrl = env.BUILD_URL

                    println("Build Number " + buildNumber)
                    println("Active Workspace - " + workspace)
                    println("Build URL " + buildUrl)
                    }

                sh "mkdir -p ~/code/"
                sh "cp -R $WORKSPACE/* ~/code/"

                echo 'The code has been successfully pulled - testd'
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }
}
